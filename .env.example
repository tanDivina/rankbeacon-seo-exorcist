# RankBeacon SEO Exorcist - Environment Variables

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=postgresql://rankbeacon:spooky_password@localhost:5432/rankbeacon

# Redis
REDIS_URL=redis://localhost:6379/0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MCP_SERVER_URL=ws://localhost:3001

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# MCP Server
MCP_SERVER_PORT=3001
LOG_LEVEL=info

# Google Search Console (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache Settings
CACHE_TTL_ANALYSIS=3600
CACHE_TTL_PREDICTION=86400
CACHE_TTL_COMPETITOR=21600
